{
  "name": "tasks-cli",
  "private": true,
  "version": "1.0.0",
  "description": "A simple CLI based application for managing day to day tasks using the command line",
  "author": "Ron Gissin",
  "keywords": [
    "typescript",
    "cli",
    "tasks"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.js"
  ],
  "scripts": {
    "dev": "ts-node ./src/cli.ts",
    "clean": "rimraf ./dist/ ./exec/",
    "build": "npm run clean && tsc",
    "test": "npm run build && ava --verbose",
    "bundle": "npm run build && pkg . --out-dir ./exec/",
    "deb": "node --inspect ./dist/cli.js"
  },
  "devDependencies": {
    "ava": "^2.2.0",
    "pkg": "^4.4.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/inquirer": "^8.2.1",
    "chalk": "^4.1.2",
    "commander": "^9.3.0",
    "inquirer": "^8.0.0",
    "uuid": "^8.3.2"
  }
}
